<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numFirst4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="380dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numSecond4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="380dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/divSign"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/divSign"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:text="@string/divSignText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/numFirst4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultView4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:text="@string/resultText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/eqSign4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="390dp"
        android:text="@string/calcBtnText"
        app:layout_constraintStart_toEndOf="@+id/resultView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eqSign4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:text="@string/eqSignText"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/numSecond4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numFirst3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="280dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="290dp"
        android:text="@string/calcBtnText"
        app:layout_constraintStart_toEndOf="@+id/resultView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eqSign3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:text="@string/eqSignText"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/numSecond3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/multSign"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:text="@string/multiSignText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/numFirst3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="300dp"
        android:text="@string/resultText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/eqSign3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numSecond3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="280dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/multSign"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numFirst2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numSecond2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/minusSign"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minusSign"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:text="@string/minusSignText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/numFirst2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="190dp"
        android:text="@string/calcBtnText"
        app:layout_constraintStart_toEndOf="@+id/resultView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eqSign2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:text="@string/eqSignText"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/numSecond2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultView2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:text="@string/resultText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/eqSign2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calcBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:text="@string/calcBtnText"
        app:layout_constraintStart_toEndOf="@+id/resultView1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plusSign"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="@string/plusSignText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/numFirst1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numSecond1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/plusSign"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eqSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="@string/eqSignText"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/numSecond1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultView1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="@string/resultText"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/eqSign"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numFirst1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="370dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <Button
        android:id="@+id/logBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="32dp"
        android:onClick="showLogView"
        android:text="@string/historyButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eqSign4" />

</androidx.constraintlayout.widget.ConstraintLayout>